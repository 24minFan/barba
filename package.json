{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.1.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/config-lerna-scopes": "7.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "commitizen": "3.0.4",
    "commitlint-config-ccgls": "^1.0.1",
    "cpx": "1.5.0",
    "cross-env": "5.2.0",
    "cz-ccgls": "0.2.0",
    "eslint": "^5.8.0",
    "eslint-plugin-jest": "^21.26.2",
    "husky": "^1.2.0",
    "inquirer": "5.2.0",
    "jaguarjs-jsdoc": "^1.1.0",
    "jest": "^23.6.0",
    "jest-watch-lerna-packages": "^1.1.0",
    "jsdoc": "^3.5.5",
    "lerna": "3.4.3",
    "lint-staged": "7.3.0",
    "lodash": "^4.17.11",
    "npm-run-all": "4.1.5",
    "prettier": "1.14.3",
    "rimraf": "2.6.2",
    "webpack": "^4.27.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean",
    "clear": "lerna run clear",
    "commit": "npx git-cz || exit 0",
    "commit-retry": "npx git-cz --retry || exit 0",
    "debug": "lerna run build:esm:watch",
    "doc": "jsdoc packages/**/src -r -d docs --verbose",
    "lint": "eslint packages/**/src/**",
    "ls": "lerna ls",
    "prerelease": "npm run build",
    "release": "lerna publish",
    "test": "eslint packages/**/src/** && yarn jest --coverage",
    "watch": "yarn jest --watch --verbose false"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-ccgls"
    }
  }
}
