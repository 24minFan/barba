{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.1.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/config-lerna-scopes": "7.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "commitizen": "3.0.4",
    "commitlint-config-ccgls": "^1.0.1",
    "cpx": "1.5.0",
    "cross-env": "5.2.0",
    "cypress": "^3.1.3",
    "cz-ccgls": "0.2.0",
    "eslint": "^5.8.0",
    "eslint-plugin-cypress": "^2.2.0",
    "eslint-plugin-jest": "^21.26.2",
    "gzip-size": "^5.0.0",
    "http-server": "^0.11.1",
    "husky": "^1.2.0",
    "inquirer": "5.2.0",
    "jaguarjs-jsdoc": "^1.1.0",
    "jest": "^23.6.0",
    "jest-watch-lerna-packages": "^1.1.0",
    "jsdoc": "^3.5.5",
    "lerna": "3.4.3",
    "lint-staged": "7.3.0",
    "lodash": "^4.17.11",
    "npm-run-all": "4.1.5",
    "prettier": "1.14.3",
    "rimraf": "2.6.2",
    "start-server-and-test": "^1.7.11",
    "webpack": "^4.27.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:watch": "lerna run build:watch",
    "clean": "lerna clean",
    "clear": "lerna run clear",
    "commit": "npx git-cz || exit 0",
    "commit-retry": "npx git-cz --retry || exit 0",
    "debug": "lerna run build:esm:watch",
    "doc": "jsdoc packages/**/src -r -d docs --verbose",
    "lint": "eslint packages/**/src/**",
    "ls": "lerna ls",
    "prerelease": "npm run build",
    "release": "lerna publish",
    "size": "npm-run-all size:core size:router size:css size:prefetch --silent",
    "size:core": "webpack --entry ./packages/core/src/index.js --output ./.tmp/core.js --config webpack.size.js --display=errors-only && echo 'ðŸ“¦ core' && gzip-size ./.tmp/core.js",
    "size:router": "webpack --entry ./packages/router/src/index.js --output ./.tmp/router.js --config webpack.size.js --display=errors-only && echo 'ðŸš¦ router' && gzip-size ./.tmp/router.js",
    "size:css": "webpack --entry ./packages/css/src/index.js --output ./.tmp/css.js --config webpack.size.js --display=errors-only && echo 'ðŸ’„ css' && gzip-size ./.tmp/css.js",
    "size:prefetch": "webpack --entry ./packages/prefetch/src/index.js --output ./.tmp/prefetch.js --config webpack.size.js --display=errors-only && echo 'ðŸš€ prefetch' && gzip-size ./.tmp/prefetch.js",
    "test": "npm-run-all lint build unit e2e",
    "unit": "yarn jest --coverage",
    "unit:watch": "yarn jest --watch --verbose false",
    "e2e": "start-server-and-test cy:server :8111 cy:run",
    "e2e:dev": "start-server-and-test cy:server :8111 cy:dev",
    "cy:server": "http-server . -p 8111",
    "cy:run": "cypress run --browser chrome",
    "cy:dev": "cypress open",
    "watch": "npm-run-all -p build:watch unit:watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-ccgls"
    }
  }
}
