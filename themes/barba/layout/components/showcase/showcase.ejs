<div class="showcase" data-component="showcase">

  <a class="showcase__link cta">
    <%- partial('components/common/icon', {
      icon: 'barba-download',
      hidden: true,
      viewbox: '0 0 30 30',
    }) %>
    <figcaption class="showcase__link__caption">
      <span class="showcase__link__subtitle">Download</span>
      <span class="showcase__link__title">barba.js</span>
    </figcaption>
  </a>

  <button class="showcase__button cta" data-ref="showcase.submit">
    <%- partial('components/common/icon', {
      icon: 'barba-submit',
      hidden: true,
      viewbox: '0 0 30 30',
    }) %>
    <figcaption class="showcase__button__caption">
      <span class="showcase__button__subtitle">Submit</span>
      <span class="showcase__button__title">website</span>
    </figcaption>
  </button>

  <!-- Modal submit -->
  <div class="showcase__overlay" data-ref="showcase.overlay"></div>

  <div class="showcase__modal" data-ref="showcase.modal">
    <form action="" method="get" class="showcase__modal__form">
      <h1 class="showcase__modal__title">Submit website</h1>
      <div class="form__image">
        <input type="file" name="name" accept=".jpg, .jpeg, .png, .gif" required>
      </div>
      <div class="form__section">
        <div class="form__field">
          <label class="form__label" for="site-name">Site name</label>
          <input class="form__input--text" type="text" name="site-name" placeholder="Website name" required>
        </div>
        <div class="form__field">
          <label class="form__label" for="site-url">Url</label>
          <input class="form__input--text" type="url" name="site-url" placeholder="http://" required>
        </div>
      </div>
      <div class="form__section">
        <div class="form__field">
          <label class="form__label" for="author-name">Project by</label>
          <input class="form__input--text" type="text" name="author-name" placeholder="Author name" required>
        </div>
        <div class="form__field">
          <label class="form__label" for="author-site">Author url</label>
          <input class="form__input--text" type="url" name="author-site" placeholder="http://" required>
        </div>
      </div>
      <div class="form__submit">
        <input class="form__input--submit" type="submit" value="Submit project">
      </div>
    </form>
  </div>
  <!-- Modal submit [end]-->

</div>
