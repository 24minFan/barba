<li class="grid__item showcase__card" data-id="<%- id %>">

  <a href="<%- data().siteUrl %>" target="_blank" rel="noopener noreferrer">
    <%- require('ejs-compiled-loader!../common/image.ejs')({
        src: data().pictureUrl,
        alt: data().siteName,
      }) %>
  </a>

  <div class="showcase__card__footer">
    <figcaption>
      <strong class="showcase__card__footer__title"><%- data().siteName %></strong>
      <span class="showcase__card__footer__author"><%- data().authorName %></span>
    </figcaption>
    <a class="grid__item__link link--view" target="_blank" href="<%- data().siteUrl %>">
      View
      <%- require('ejs-compiled-loader!../common/icon.ejs')({
        icon: 'barba-external',
        hidden: true,
        viewbox: '0 0 15 15',
      }) %>
    </a>
  </div>

</li>
