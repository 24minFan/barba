<div class="feature-box">
  <div class="feature-box__body">
    <div class="feature-box__column--three">
      <div class="feature-box__column__icon">
        <%- partial('components/common/image.ejs', {
          src: theme.root + 'assets/svg/prefetch.svg',
          alt: 'prefetch icon',
        }) %>
      </div>
      <p class="feature-box__body__text">Barba prefetch automatically fetch and cache your pages. Is inspired by
        <a>quiklink</a></p>
    </div>

    <div class="feature-box__column--three">
      <div class="feature-box__column__icon">
        <%- partial('components/common/image.ejs', {
          src: theme.root + 'assets/svg/links.svg',
          alt: 'links icon',
        }) %>
      </div>
      <p class="feature-box__body__text">Based on Intersection Observer, it processes <b>all eligible links</b> that
        enter
        the viewport.</p>
    </div>
  </div>
  <div class="feature-box__footer">
    <%-
      partial('../feature-action.ejs',
        {
          ctaLink: theme.root + page.action.link,
          ctaModifier: page.order,
          ctaTitle: page.action.title,
          ctaIcon: page.action.icon,
        }
      )
    %>
  </div>
</div>