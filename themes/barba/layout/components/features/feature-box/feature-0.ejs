<div class="feature-box">
  <div class="feature-box__body">
    <div class="feature-box__column--three">
      <div class="feature-box__column__icon">
        <%- partial('components/common/image.ejs', { src: theme.root +
        'assets/svg/flexible.svg', alt: 'flexible icon', }) %>
      </div>
      <p class="feature-box__body__text">
        Flexible and dependency free library that helps you creating fluid and
        smooth transitions between your website's pages.
      </p>
    </div>

    <div class="feature-box__column--three">
      <div class="feature-box__column__icon">
        <%- partial('components/common/image.ejs', {
          src: theme.root + 'assets/svg/delay.svg',
          alt: 'delay icon',
        }) %>
      </div>
      <p class="feature-box__body__text">
        I helps reducing the delay between your pages, minimizing HTTP requests and
        enhancing your users's web experience.
      </p>
    </div>
  </div>
  <div class="feature-box__footer">
    <%-
      partial('../feature-action.ejs',
        {
          ctaLink: theme.root + page.action.link,
          ctaModifier: page.order,
          ctaTitle: page.action.title,
          ctaIcon: page.action.icon,
        }
      )
    %>
  </div>
</div>