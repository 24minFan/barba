<% var features = theme.menu[0].subpages %>
<div class="feature" data-component="feature" data-feature-slug="<%- page.slug %>"
  data-feature-order="<%- page.order %>">
  <%-
    partial(
      '../common/logo.ejs',
      {
        classes: 'feature__logo featured featured--' + page.order
      }
    )
  %>
  <div class="feature__shape">
    <%-
      partial(
        '../common/logo.ejs',
        {
          classes: 'only-big can-move detail-feature featured--' + page.order
        }
      )
    %>
  </div>

  <%- partial('./feature-nav.ejs', { index: page.order }) %>

  <div class="feature__content feature-content">
    <h1 class="feature-content__title colored">
      <%- page.title %>
    </h1>
    <% if (page.slug && page.order < features.length - 1) { %>
    <div class="feature-content__bodymovin" data-ref="feature.bodymovin"></div>

    <%- partial('./feature-box/feature-' + page.order + '.ejs') %>

    <% } else { %>
    <%- page.content %>
    <% }; %>
  </div>
</div>
